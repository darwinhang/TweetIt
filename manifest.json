{
	"manifest_version": 2,
	"name": "TweetIt",
	"version": "0.0.1",
	"description": "Tweet text from webpages as quotes",

	"content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content.js"]
    }],

	"background": {
		"page": "background.html",
		"persistent": false
	}, 
	"browser_action": {
		"default_title": ""
	}
}